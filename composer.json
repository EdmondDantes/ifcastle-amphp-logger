{
    "name": "ifcastle/amphp-logger",
    "description": "Monolog integration with IfCastle Am-php.",
    "type": "ifcastle-package",
    "license": "MIT",
    "keywords": ["log", "ifcastle", "monolog"],
    "extra": {
        "ifcastle-installer": {
            "package": {
                "name": "logger",
                "bootloaders": [
                    "IfCastle\\Amphp\\Logger\\Bootloader"
                ]
            }
        }
    },
    "autoload": {
        "psr-4": {
            "IfCastle\\Amphp\\Logger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\Amphp\\Logger\\": "./tests"
        }
    },
    "require": {
        "ifcastle/application": "^0.6.0",
        "monolog/monolog": "^3.7",
        "ifcastle/exceptions": "^5.0",
        "amphp/log": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.60",
        "amphp/php-cs-fixer-config": "^2.1"
    }
}
